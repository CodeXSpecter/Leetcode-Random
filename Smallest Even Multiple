Approach 1

class Solution {
    public int smallestEvenMultiple(int n) {
        if(n%2==1){
            return n*2;
        }
        else{
            return n;
        }
    }
}
Approach 2

class Solution {
    public int smallestEvenMultiple(int n) {
        if(n%2==0){
            return n;
        }
        else{
            return n*2;
        }
    }
}
